{
  "footer": {
    "title": "Footer",
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },

  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-top-content",
      "flex-layout.row#footer-bottom-content"
    ],
    "title": "Desktop"
  },

  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#footer-top-content",
      "flex-layout.row#footer-contact",
      "flex-layout.row#footer-methods",
      "flex-layout.row#footer-social",
      "flex-layout.row#footer-powered"
    ],
    "title": "Mobile"
  },

  "flex-layout.row#footer-top-content": {
    "children": [
      "flex-layout.row#footer-logo",
      "flex-layout.row#footer-menu"
    ],
    "props": {
      "blockClass": "footer-top-content"
    }
  },

  "flex-layout.row#footer-bottom-content": {
    "children": [
      "flex-layout.row#footer-contact",
      "flex-layout.row#footer-methods",
      "flex-layout.row#footer-social",
      "flex-layout.row#footer-powered"
    ],
    "props": {
      "blockClass": "footer-bottom-content"
    }
  }
}
